    <div class="°°°">
      <%= f.label :password, "Password", class: label_classes %>  
      <%= if @minimum_password_length%>
        <em class="°°°">
        (<%= @minimum_password_length%> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete:
      "new-password", class: input_classes %>
    </div>
    <div class="°°°">  
      <%= f.label :password_confirmation, "Confirm Password",
      class: label_classes %>
      <%= f.password_field :password_confirmation, autocomplete:
      "new-password", class: input_classes %>
    </div>
    <div class="°°°">
